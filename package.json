{
    "name": "healthcheck",
    "version": "1.0.0",
    "private": true,
    "description": "A simple Express health check app",
    "homepage": "https://github.com/abhi-markan/healthcheck#readme",
    "bugs": {
        "url": "https://github.com/abhi-markan/healthcheck/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abhi-markan/healthcheck.git"
    },
    "license": "MIT",
    "author": "Abhi Markan",
    "main": "app.js",
    "scripts": {
        "housekeeping": "npm update --save && npm i && npm run prettier:fix && npm run lint:fix && npm run validate:yml && npm audit --fix && npm run spellcheck",
        "lint": "eslint --color **/*.{ts,js} --ignore-path ../.eslintignore",
        "lint:fix": "eslint --fix --color **/*.{ts,js}",
        "prepare": "husky",
        "prettier": "prettier --no-error-on-unmatched-pattern --check **/*.{ts,js} --ignore-path ../.prettierignore",
        "prettier:fix": "prettier --write **/*.{ts,js} --ignore-path ../.prettierignore",
        "spellcheck": "cspell lint --gitignore --no-must-find-files --unique --no-progress --show-suggestions --color **/*",
        "start": "node app.js",
        "unit-test": "jest --verbose --config=unit.jest.config.js",
        "validate:yml": "npx yaml-lint **/*.yml --ignore=**/node_modules"
    },
    "lint-staged": {
        "**/package.json": "sort-package-json",
        "**/*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.md": [
            "prettier --write"
        ],
        "**/*.yml": [
            "npm run validate:yml"
        ],
        "**/*": [
            "cspell lint --gitignore --no-must-find-files --unique --no-progress --show-suggestions --color"
        ]
    },
    "dependencies": {
        "axios": "^1.7.7",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "release-please": "^16.14.3",
        "supertest": "^7.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.8.1",
        "@commitlint/config-conventional": "^17.8.1",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "cspell": "^8.15.3",
        "eslint": "^9.12.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "3.0.3",
        "sort-package-json": "^2.10.1",
        "ts-jest": "^29.2.5",
        "yaml-lint": "^1.7.0"
    },
    "engines": {
        "node": ">=22.8.0",
        "npm": ">=10.8.2"
    },
    "engineStrict": true
}
